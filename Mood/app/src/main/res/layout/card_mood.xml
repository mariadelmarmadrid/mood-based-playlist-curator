<?xml version="1.0" encoding="utf-8"?><!--
  card_mood.xml
  Layout for a single mood entry inside the daily summary list.
  Displays:
    - Mood type and timestamp (top row)
    - Optional details (sleep, social, hobby, food)
    - User note
    - Edit and Delete action buttons

  Used by:
    â€¢ MoodAdapter.kt (for single-day views)
    â€¢ DailyMoodAdapter.kt (to show multiple moods per day)
-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="false"
    android:elevation="4dp"
    android:focusable="false"
    app:cardBackgroundColor="@color/colorSurface">

    <!-- Root container for card content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- ========== Top row: Mood type + timestamp ========== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Mood title (e.g., Happy ðŸ˜Š) -->
            <TextView
                android:id="@+id/moodTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorTextPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Timestamp (only time, e.g., 14:32) -->
            <TextView
                android:id="@+id/moodTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextSecondary"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- ========== Middle section: Optional details ========== -->
        <!--
          Uses FlexboxLayout to wrap the small detail labels.
          Only visible when data exists (sleep, social, hobby, food).
        -->
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            app:flexWrap="wrap"
            app:justifyContent="flex_start">

            <!-- Sleep quality detail (e.g., ðŸ›Œ Good) -->
            <TextView
                android:id="@+id/sleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="2dp"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <!-- Social activity detail (e.g., ðŸ‘¥ Friends) -->
            <TextView
                android:id="@+id/social"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="2dp"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <!-- Hobby detail (e.g., ðŸŽ¨ Reading) -->
            <TextView
                android:id="@+id/hobby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="2dp"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <!-- Food type detail (e.g., ðŸ½ï¸ Homemade) -->
            <TextView
                android:id="@+id/food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="2dp"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </com.google.android.flexbox.FlexboxLayout>

        <!-- ========== User note ========== -->
        <!-- Optional note text entered by the user -->
        <TextView
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/moodImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="4dp"
            android:visibility="gone"
            android:contentDescription="@string/mood_photo" />


        <!-- ========== Action buttons row ========== -->
        <!--
          Two ImageButtons aligned to the end:
          - Edit: opens mood editing screen
          - Delete: prompts confirmation before deletion
        -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingTop="4dp">

            <!-- Edit mood button -->
            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/button_edit"
                android:focusable="true"
                app:srcCompat="@drawable/ic_edit_24"
                app:tint="@color/colorAccent" />


            <!-- Delete mood button -->
            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/button_delete"
                android:src="@drawable/ic_delete_24"
                app:tint="@color/colorAccent" />
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
