<?xml version="1.0" encoding="utf-8"?><!--
  Layout representing one "day card" in the mood list.
  Each card displays:
    â€¢ The date header (e.g., "Sunday, 20 Oct 2025")
    â€¢ A vertical list of that day's individual moods (each using card_mood.xml)
    â€¢ A divider line
    â€¢ The average mood summary for the day (e.g., "Average Mood: Relaxed ðŸ˜Œ")

  Used by:
    â€¢ DailyMoodAdapter.kt  â†’ binds DailyMoodSummary objects
    â€¢ MoodListActivity.kt  â†’ main list of daily cards
-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/colorSurface"
    android:elevation="8dp">

    <!-- Root container for the cardâ€™s vertical content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ========== Header: Date ========== -->
        <!--
          Displays the date for this summary, e.g. "Sunday, 20 Oct 2025".
          Set dynamically by DailyMoodAdapter.formatDateForHeader().
        -->
        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- ========== Moods Container ========== -->
        <!--
          Holds all Mood cards (card_mood.xml) for this date.
          Each mood is dynamically inflated by DailyMoodAdapter.bind().
        -->
        <LinearLayout
            android:id="@+id/moodsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical" />

        <!-- ========== Divider Line ========== -->
        <!--
          Thin gray line separating the list of moods from the daily average.
        -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#CCCCCC" />

        <!-- ========== Footer: Average Mood ========== -->
        <!--
          Displays the computed daily average mood, e.g.:
          "Average Mood: Relaxed ðŸ˜Œ"
          Value provided by DailyMoodAdapter.bind() based on mood scores.
        -->
        <TextView
            android:id="@+id/averageMood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorTextPrimary"
            android:textSize="16sp"
            android:textStyle="italic" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
