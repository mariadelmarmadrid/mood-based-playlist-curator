<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/labelSelectMood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_select_mood"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal" />


        <!-- Moods section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="5"
            android:layout_marginBottom="16dp">

            <!-- ===== Column template repeated for each mood ===== -->
            <!-- Happy -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="4dp"
                    android:clipToPadding="false">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipHappy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text=""
                        android:tag="Happy ðŸ˜Š"
                        android:checkable="true"
                        android:clickable="true"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        app:checkedIconVisible="false"
                        app:chipBackgroundColor="@android:color/transparent"
                        app:chipStrokeWidth="0dp"
                        app:rippleColor="@android:color/transparent"
                        app:ensureMinTouchTargetSize="false"
                        app:chipStartPadding="0dp"
                        app:chipEndPadding="0dp"
                        app:iconStartPadding="0dp"
                        app:iconEndPadding="0dp"
                        app:chipIcon="@drawable/ic_mood_happy_selector"
                        app:chipIconTint="@color/mood_happy_tint"
                        app:chipIconSize="48dp"
                        android:layout_gravity="center"/>
                </FrameLayout>

                <TextView
                    style="@style/TextAppearance.Material3.BodySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="happy"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <!-- Relaxed -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="4dp"
                    android:clipToPadding="false">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipRelaxed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text=""
                        android:tag="Relaxed ðŸ˜Œ"
                        android:checkable="true"
                        android:clickable="true"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        app:checkedIconVisible="false"
                        app:chipBackgroundColor="@android:color/transparent"
                        app:chipStrokeWidth="0dp"
                        app:rippleColor="@android:color/transparent"
                        app:ensureMinTouchTargetSize="false"
                        app:chipStartPadding="0dp"
                        app:chipEndPadding="0dp"
                        app:iconStartPadding="0dp"
                        app:iconEndPadding="0dp"
                        app:chipIcon="@drawable/ic_mood_relaxed_selector"
                        app:chipIconTint="@color/mood_relaxed_tint"
                        app:chipIconSize="48dp"
                        android:layout_gravity="center"/>
                </FrameLayout>

                <TextView
                    style="@style/TextAppearance.Material3.BodySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="relaxed"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <!-- Neutral -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="4dp"
                    android:clipToPadding="false">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipNeutral"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text=""
                        android:tag="Neutral ðŸ˜"
                        android:checkable="true"
                        android:clickable="true"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        app:checkedIconVisible="false"
                        app:chipBackgroundColor="@android:color/transparent"
                        app:chipStrokeWidth="0dp"
                        app:rippleColor="@android:color/transparent"
                        app:ensureMinTouchTargetSize="false"
                        app:chipStartPadding="0dp"
                        app:chipEndPadding="0dp"
                        app:iconStartPadding="0dp"
                        app:iconEndPadding="0dp"
                        app:chipIcon="@drawable/ic_mood_neutral_selector"
                        app:chipIconTint="@color/mood_neutral_tint"
                        app:chipIconSize="48dp"
                        android:layout_gravity="center"/>
                </FrameLayout>

                <TextView
                    style="@style/TextAppearance.Material3.BodySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="neutral"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <!-- Sad -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="4dp"
                    android:clipToPadding="false">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSad"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text=""
                        android:tag="Sad ðŸ˜¢"
                        android:checkable="true"
                        android:clickable="true"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        app:checkedIconVisible="false"
                        app:chipBackgroundColor="@android:color/transparent"
                        app:chipStrokeWidth="0dp"
                        app:rippleColor="@android:color/transparent"
                        app:ensureMinTouchTargetSize="false"
                        app:chipStartPadding="0dp"
                        app:chipEndPadding="0dp"
                        app:iconStartPadding="0dp"
                        app:iconEndPadding="0dp"
                        app:chipIcon="@drawable/ic_mood_sad_selector"
                        app:chipIconTint="@color/mood_sad_tint"
                        app:chipIconSize="48dp"
                        android:layout_gravity="center"/>
                </FrameLayout>

                <TextView
                    style="@style/TextAppearance.Material3.BodySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sad"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <!-- Angry -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="4dp"
                    android:clipToPadding="false">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipAngry"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text=""
                        android:tag="Angry ðŸ˜ "
                        android:checkable="true"
                        android:clickable="true"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        app:checkedIconVisible="false"
                        app:chipBackgroundColor="@android:color/transparent"
                        app:chipStrokeWidth="0dp"
                        app:rippleColor="@android:color/transparent"
                        app:ensureMinTouchTargetSize="false"
                        app:chipStartPadding="0dp"
                        app:chipEndPadding="0dp"
                        app:iconStartPadding="0dp"
                        app:iconEndPadding="0dp"
                        app:chipIcon="@drawable/ic_mood_angry_selector"
                        app:chipIconTint="@color/mood_angry_tint"
                        app:chipIconSize="48dp"
                        android:layout_gravity="center"/>
                </FrameLayout>

                <TextView
                    style="@style/TextAppearance.Material3.BodySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="angry"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Sleep Quality -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_sleep_quality" />

        <Spinner
            android:id="@+id/sleepQualitySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Social Activity -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_social_activity" />

        <Spinner
            android:id="@+id/socialActivitySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Hobby -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_hobby" />

        <Spinner
            android:id="@+id/hobbySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Food Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_food_type" />

        <Spinner
            android:id="@+id/foodTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Note -->
        <EditText
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_moodNote"
            android:inputType="textMultiLine" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAdd"
                style="?attr/materialButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_addMood"
                app:icon="@android:drawable/ic_menu_save"
                app:iconPadding="8dp"
                app:iconGravity="textStart"/>

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_cancel"
                app:icon="@android:drawable/ic_menu_close_clear_cancel"
                app:iconPadding="8dp"
                app:iconGravity="textStart"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
