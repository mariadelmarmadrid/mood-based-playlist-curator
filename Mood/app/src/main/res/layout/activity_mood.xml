<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Mood Type -->
        <TextView
            android:id="@+id/labelSelectMood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_select_mood"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/moodRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/moodHappy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Happy 😊" />

            <RadioButton
                android:id="@+id/moodRelaxed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Relaxed 😌" />

            <RadioButton
                android:id="@+id/moodNeutral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Neutral 😐" />

            <RadioButton
                android:id="@+id/moodSad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sad 😢" />

            <RadioButton
                android:id="@+id/moodAngry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Angry 😠" />
        </RadioGroup>


        <!-- Sleep Quality -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_sleep_quality" />

        <Spinner
            android:id="@+id/sleepQualitySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Social Activity -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_social_activity" />

        <Spinner
            android:id="@+id/socialActivitySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Hobby -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_hobby" />

        <Spinner
            android:id="@+id/hobbySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Food Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_food_type" />

        <Spinner
            android:id="@+id/foodTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Note -->
        <EditText
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_moodNote"
            android:inputType="textMultiLine" />

        <!-- Buttons Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/button_addMood" />

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/button_cancel" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
