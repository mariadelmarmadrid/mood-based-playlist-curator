<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Dark version of the same app theme -->
    <style name="Theme.Mood" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorOnAccent</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorTextPrimary</item>

        <!-- Default text colors in dark mode -->
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>

        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Mood.AlertDialog</item>
    </style>

    <style name="ThemeOverlay.Mood.AlertDialog"
        parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorOnAccent</item>
        <item name="colorOnSurface">@color/colorTextPrimary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="buttonTint">@color/colorAccent</item>
    </style>

</resources>
